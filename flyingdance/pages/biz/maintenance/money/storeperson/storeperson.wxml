<form bindsubmit='updata'>
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__bd">
    <view class="weui-cells__title">基本资料</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label" style="padding:10rpx">品名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name='sproduct_Name' value="{{StoreData.sproduct_Name}}"  placeholder="{{StoreData.sproduct_Name}}" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label" style="padding:10rpx">品牌</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value="{{StoreData.sbrand}}" name='sbrand' placeholder="{{StoreData.sbrand}}" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label" style="padding:10rpx">规格</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value="{{StoreData.specifications}}" name='specifications' placeholder="{{StoreData.specifications}}" />
        </view>
      </view>
      <view class="graySpace"></view>
    
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label" style="padding:10rpx">类别</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value="{{StoreData.scategory}}" name='scategory' placeholder="{{StoreData.scategory}}" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label" style="padding:10rpx">采购价格</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value="{{StoreData.sbuy_price}}" name='sbuy_price' placeholder="{{StoreData.sbuy_price}}" />
        </view>
      </view>

    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label" style="padding:10rpx">指导价格</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name='sguide_price' value="{{StoreData.sguide_price}}"  placeholder="{{StoreData.sguide_price}}" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label" style="padding:10rpx">计量单位</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value="{{StoreData.sunit}}" name='sunit' placeholder="{{StoreData.sunit}}" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label" style="padding:10rpx">库存数量</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value="{{StoreData.snumber}}" name='snumber' placeholder="{{StoreData.snumber}}" />
        </view>
      </view>
      <view class="graySpace"></view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label" style="padding:10rpx">本月领用</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value="{{StoreData.scollected_month}}" name='scollected_month' placeholder="{{StoreData.scollected_month}}" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label" style="padding:10rpx">下月申购</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value="{{StoreData.snext_month}}" name='snext_month' placeholder="{{StoreData.snext_month}}" />
        </view>
      </view>  
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label" style="padding:10rpx">所属单位</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value="{{StoreData.school}}" name='school' placeholder="{{StoreData.school}}" />
        </view>
      </view>  
    </view>
   
    
    <view class="weui-btn-area">

      <button class="weui-btn" type="primary" formType="submit">更新</button>

    </view>

    <view class="weui-btn-area">

      <button class="weui-btn" type="primary" bindtap="toapply" id="{{StoreData.sid}}">申请领用</button>
      
    </view>

 

</view>
</view>
</form>